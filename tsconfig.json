{
    "extends": "astro/tsconfigs/strict",
    "compilerOptions": {
        "strictNullChecks": true,
        "allowJs": true,
        "baseUrl": ".",
        "moduleResolution": "bundler",
        "paths": {
            "@root/*": ["./*"],
            "@src/*": ["./src/*"],
            "@components/*": ["./src/components/*"],
            "@layouts/*": ["./src/layouts/*"],
            "@images/*": ["./src/assets/images/*"],
            "@pages/*": ["./src/pages/*"],
            "@scripts/*": ["./src/scripts/*"],
            "@styles/*": ["./src/styles/*"],
            "@types/*": ["types/*"],
            "@data/*": ["./src/data/*"]
        }
    },
    "exclude": ["dist", "node_modules"]
}
